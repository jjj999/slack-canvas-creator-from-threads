[flake8]
max-line-length = 100
extend-ignore =
    # E203: Whitespace before ':'
    E203,
    # W503: Line break before binary operator
    W503,
    # E501: Line too long (handled by black)
    E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
